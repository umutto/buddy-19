- var is_self = UserAlias === MessageUserId
.chat-message.d-flex.pb-1(data-userid=MessageUserId data-type=MessageType)
    if (MessageUserAvatar && MessageUserName)
        .pr-1.d-flex.align-items-end(class=(is_self ? "order-2" : "order-1") style="max-width: 48px;")
            img.img-fluid.mb-1(src=MessageUserAvatar, alt=MessageUserName)
    .flex-grow-1.px-1(class=(MessageUserAvatar && MessageUserName ? is_self ? "speech-bubble sb-right order-1" : "speech-bubble sb-left order-2": "bg-light border"))
        .chat-header(class=(MessageUserAvatar && MessageUserName ? "border-bottom" : ""))
            if (MessageUserName)
                span.h5 #{MessageUserName}
            .chat-time.small.d-flex.align-items-center(class=(MessageUserAvatar && MessageUserName ? "position-absolute" : "float-right"))
                span.material-icons.ms-16.mx-1 access_time
                span #{MessageTime}
        .chat-text.px-1
            p.p-wrap.mb-0 #{MessageText}
