extends layout

block metas
  link(rel='stylesheet', href='/stylesheets/room.css')
  link(rel='stylesheet', href='/stylesheets/theme.css')

  script(src='/javascripts/join.js')

block content
    nav.navbar
        a.navbar-brand.btn.btn-primary-outline.font-weight-bold.wobbly-border.bg-transparent-white.px-3(href='/', title='Home')
            img.mr-3(src='/images/icon_transparent.png', width='48', height='48', alt='Home')
            | Buddy-19
    #main-wrapper.container.pt-3
        .row.text-center
            h2 Joining to #{Room.Name}
        form#join-form.mx-3(method="POST" action="/join/" + RoomId data-room=RoomId)
            if Room.Password && Room.Host != User.Id
                .row.d-flex.align-items-center
                    label(for="roomPassword") Room Password:
                    input#roomPassword.form-control(type="password" name="roomPassword" placeholder="Enter the room password" autocomplete="current-password" required)
            .row.pb-3
                label(for="userName") User Name:
                input#userName.form-control(type="text" name="userName" placeholder="Enter a nickname" value=User.Name autocomplete="nickname" required)
            include user_avatar_select
            button.btn.btn-lg.btn-primary.btn-block.my-3(type="submit") Enter the room!
